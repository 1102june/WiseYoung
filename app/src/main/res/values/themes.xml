<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ✅ 기본 앱 테마 -->
    <style name="Theme.WiseYoung" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 주요 색상 -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>

        <!-- 배경 -->
        <item name="android:windowBackground">@color/color_background</item>
        <item name="colorSurface">@color/color_surface</item>
        <item name="colorOnSurface">@color/color_on_surface</item>

        <!-- 상태바 -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_primary</item>

        <!-- 액션바 제거 -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- ✅ 어두운 모드 앱 테마 -->
    <style name="Theme.WiseYoung.Night" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 주요 색상 (어두운 모드) -->
        <item name="colorPrimary">@color/night_color_primary</item>
        <item name="colorOnPrimary">@color/night_color_on_primary</item>
        <item name="colorSecondary">@color/night_color_secondary</item>
        <item name="colorOnSecondary">@color/night_color_on_secondary</item>

        <!-- 배경 (어두운 모드) -->
        <item name="android:windowBackground">@color/night_color_background</item>
        <item name="colorSurface">@color/night_color_surface</item>
        <item name="colorOnSurface">@color/night_color_on_surface</item>

        <!-- 상태바 (어두운 모드) -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/night_color_primary</item>

        <!-- 액션바 제거 (어두운 모드) -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- ✅ Splash 전용 테마 -->
    <style name="Theme.WiseYoung.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/bg_splash_gradient</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

</resources>

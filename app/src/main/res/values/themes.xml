<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ✅ 기본 앱 테마 -->
    <style name="Theme.WiseYoung" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 색상 정의 -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- 상태바 색상 -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/purple_700</item>

        <!-- 전체 배경 -->
        <item name="android:windowBackground">@color/white</item>

        <!-- 액션바 제거 -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- ✅ Splash 전용 테마 -->
    <style name="Theme.WiseYoung.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 타이틀바 제거 -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <!-- 풀스크린 -->
        <item name="android:windowFullscreen">true</item>

        <!-- 스플래시 배경 (gradient 가능) -->
        <item name="android:windowBackground">@drawable/bg_splash_gradient</item>

        <!-- 상태바 투명 -->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

</resources>

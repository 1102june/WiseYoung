<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.wiseyoung.app"> <!-- 수정된 부분 -->

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/wy_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/wy_logo_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.WiseYoung"
        tools:targetApi="31"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        >

        <!-- SplashActivity -->
        <activity
            android:name="com.wiseyoung.app.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.WiseYoung.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- WelcomeActivity -->
        <activity
            android:name="com.wiseyoung.app.WelcomeActivity"
            android:exported="true"
            android:theme="@style/Theme.WiseYoung" />

        <!-- AuthActivity (로그인 / 회원가입 화면) -->
        <activity
            android:name="com.wiseyoung.app.AuthActivity"
            android:exported="false" />

        <!-- LoginActivity (로그인 화면) -->
        <activity
            android:name="com.wiseyoung.app.LoginActivity"
            android:exported="false" />

        <!-- RegisterActivity (회원가입 화면) -->
        <activity
            android:name="com.wiseyoung.app.RegisterActivity"
            android:exported="false" />

    </application>
    <uses-permission android:name="android.permission.INTERNET"/>

</manifest>

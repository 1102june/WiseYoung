<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.wiseyoung.app"> <!-- 수정된 부분 -->

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/wy_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/wy_logo_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.WiseYoung"
        tools:targetApi="31"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        >

        <!-- SplashActivity -->
        <activity
            android:name="com.wiseyoung.app.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.WiseYoung.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- WelcomeActivity -->
        <activity
            android:name="com.wiseyoung.app.WelcomeActivity"
            android:exported="true"
            android:theme="@style/Theme.WiseYoung" />

        <!-- AuthActivity (로그인 / 회원가입 화면) -->
        <activity
            android:name="com.wiseyoung.app.AuthActivity"
            android:exported="false" />

        <!-- LoginActivity (로그인 화면) -->
        <activity
            android:name="com.wiseyoung.app.LoginActivity"
            android:exported="false" />

        <!-- PasswordResetActivity (비밀번호 찾기 화면) -->
        <activity
            android:name="com.wiseyoung.app.PasswordResetActivity"
            android:exported="false" />

        <!-- RegisterActivity (회원가입 화면) -->
        <activity
            android:name="com.wiseyoung.app.RegisterActivity"
            android:exported="false" />
        <!-- MainActivity (로그인 이후 홈) -->
        <activity
            android:name="com.wiseyoung.app.MainActivity"
            android:exported="false" />

        <!-- ProfileSetupActivity (최초 Google 로그인 프로필) -->
        <activity
            android:name="com.wiseyoung.app.ProfileSetupActivity"
            android:exported="false"
            android:theme="@style/Theme.WiseYoung.NoActionBar" />

        <!-- CompleteActivity (프로필 완료 후 시작 화면) -->
        <activity
            android:name="com.wiseyoung.app.CompleteActivity"
            android:exported="false"
            android:theme="@style/Theme.WiseYoung.NoActionBar" />

        <!-- NotificationActivity (알림 화면) -->
        <activity
            android:name="com.wiseyoung.app.NotificationActivity"
            android:exported="false"
            android:theme="@style/Theme.WiseYoung.NoActionBar" />

        <!-- BookmarkActivity (북마크 화면) -->
        <activity
            android:name="com.wiseyoung.app.BookmarkActivity"
            android:exported="false"
            android:theme="@style/Theme.WiseYoung.NoActionBar" />

        <!-- CalendarActivity (캘린더 화면) -->
        <activity
            android:name="com.wiseyoung.app.CalendarActivity"
            android:exported="false"
            android:theme="@style/Theme.WiseYoung.NoActionBar" />

        <!-- ProfileActivity (프로필 화면) -->
        <activity
            android:name="com.wiseyoung.app.ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.WiseYoung.NoActionBar" />

        <!-- PolicyListActivity (정책 리스트 화면) -->
        <activity
            android:name="com.wiseyoung.app.PolicyListActivity"
            android:exported="false"
            android:theme="@style/Theme.WiseYoung.NoActionBar" />

        <!-- HousingMapActivity (임대주택 추천 화면) -->
        <activity
            android:name="com.wiseyoung.app.HousingMapActivity"
            android:exported="false"
            android:theme="@style/Theme.WiseYoung.NoActionBar" />


    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>

</manifest>
